<h1>New Advertisement Request</h1>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for advertisements</p>
    <ul>
      <li>Make sure you check your spelling and grammar</li>
      <li>No offensive or obscene content</li>
      <li>Have fun!</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter the name of your ad" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter the content of the ad" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, in: 50..150.0, step: 5, class: 'form-control', placeholder: 50 %>
      </div>
      <div class="form-group">
        <%= check_box_tag(:agree) %>
        <%= label_tag(:agree, "I agree to pay the above amount")%>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
